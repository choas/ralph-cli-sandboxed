{
  "name": "ralph-cli-sandboxed",
  "version": "0.5.0",
  "description": "AI-driven development automation CLI for Claude Code",
  "type": "module",
  "bin": {
    "ralph": "dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "docs",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "mkdir -p dist/config && cp src/config/*.json dist/config/",
    "dev": "npx tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "oxfmt src/",
    "format:check": "oxfmt --check src/",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@inkjs/ui": "^2.0.0",
    "@slack/bolt": "^4.6.0",
    "@slack/web-api": "^7.13.0",
    "discord.js": "^14.16.0",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "openai": "^4.77.0",
    "react": "^18.3.1",
    "readline": "^1.3.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.12",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cli",
    "claude",
    "claude-code",
    "ai",
    "automation",
    "prd",
    "anthropic",
    "llm",
    "developer-tools",
    "devtools"
  ],
  "author": "Lars Gregori",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/choas/ralph-cli-sandboxed.git"
  },
  "homepage": "https://github.com/choas/ralph-cli-sandboxed#readme",
  "bugs": {
    "url": "https://github.com/choas/ralph-cli-sandboxed/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "undici": "^6.23.0"
  }
}
