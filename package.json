{
  "name": "ralph-cli-sandboxed",
  "version": "0.2.1",
  "description": "AI-driven development automation CLI for Claude Code",
  "type": "module",
  "bin": {
    "ralph": "dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "docs",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-config",
    "copy-config": "mkdir -p dist/config && cp src/config/*.json dist/config/",
    "dev": "npx tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cli",
    "claude",
    "claude-code",
    "ai",
    "automation",
    "prd",
    "anthropic",
    "llm",
    "developer-tools",
    "devtools"
  ],
  "author": "Lars Gregori",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/choas/ralph-cli-sandboxed.git"
  },
  "homepage": "https://github.com/choas/ralph-cli-sandboxed#readme",
  "bugs": {
    "url": "https://github.com/choas/ralph-cli-sandboxed/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
